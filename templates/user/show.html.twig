{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>


    <table class="table" border="1">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Password</th>
            <td>{{ user.password }}</td>
        </tr>
        <tr>
            <th>Birthdate</th>
            <td>{{ profile.birthdate|date("d/m/Y") }}</td>
        </tr>
        <tr>
            <th>Phone</th>
            <td>{{ profile.phone }}</td>
        </tr>
        </tbody>
    </table>
    <a href="{{ path('user_index') }}">back to list</a>
    <br>
    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
    <br>
    {{ include('user/_delete_form.html.twig') }}

    <h3>Products</h3>

    <table class="table" border="1">
        <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Description</th>
        </tr>
        </thead>
        <tbody>

        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.title }}</td>
                <td>{{ product.description }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}